<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade">
	<name>MigrateToJoomla</name>
	<author>Joomla! Project</author>
	<creationDate>2023</creationDate>
	<copyright>(C) 2013 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>COM_MIGRATE_TO_JOOMLA_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Component\MigrateToJoomla</namespace>
	<administration>
	        <files folder="admin/">
				<filename>access.xml</filename>
				<filename>config.xml</filename>
				<folder>services</folder>
				<folder>src</folder>
				<folder>tmpl</folder>
			</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/com_migrate_to_joomla.ini</language>
			<language tag="en-GB">language/en-GB/com_migrate_to_joomla.sys.ini</language>
		</languages>
		<menu link="index.php?option=com_migratetojoomla">migratetojoomla</menu>
	</administration>
	<media destination="com_migratetojoomla" folder="media">
		<folder>js</folder>
		<folder>css</folder>
	</media>
</extension>
