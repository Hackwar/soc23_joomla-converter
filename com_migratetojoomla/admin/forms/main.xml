<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="mediaoptions"
		type="list"
		label="COM_MIGRATETOJOOMLA_SELECT_OPTION_FOR_MEDIA_LABEL"
		description="COM_MIGRATETOJOOMLA_SELECT_OPTION_FOR_MEDIA_DESC"
		class="form-select"
		default="1"
		validate="options"
	>
		<option value="1">COM_MIGRATETOJOOMLA_HTTP</option>
		<option value="2">COM_MIGRATETOJOOMLA_FS</option>
		<option value="3">COM_MIGRATETOJOOMLA_FTP</option>
	</field>
	<field
		name="livewebsiteurl"
		type="text"
		showon="mediaoptions:1"
		label="COM_MIGRATETOJOOMLA_HTTP_LINK_LABEL"
		description="COM_MIGRATETOJOOMLA_HTTP_LINK_DESC"/>
	<field
		name="basedir"
		type="text"
		showon="mediaoptions:2"
		label="COM_MIGRATETOJOOMLA_WEBSITE_BASE_DIRECTORY_LABEL"
		description="COM_MIGRATETOJOOMLA_WEBSITE_BASE_DIRECTORY_DESC"/>
	<field
		name="ftphost"
		type="text"
		showon="mediaoptions:3"
		label="COM_MIGRATETOJOOMLA_FTP_HOST_LABEL"/>
	<field
		name="ftpport"
		type="int"
		showon="mediaoptions:3"
		label="COM_MIGRATETOJOOMLA_FTP_PORT_LABEL"/>
	<field
		name="ftpusername"
		type="text"
		showon="mediaoptions:3"
		label="COM_MIGRATETOJOOMLA_FTP_USERNAME_LABEL"/>
	<field
		name="ftppassword"
		type="text"
		showon="mediaoptions:3"
		label="COM_MIGRATETOJOOMLA_FTP_PASSWORD_LABEL"/>
	<field
		name="ftpprotocoloptions"
		type="list"
		label="COM_MIGRATETOJOOMLA_FTP_PROTOCOL_LABEL"
		class="form-select"
		default="1"
		showon="mediaoption:3"
		validate="options"
	>
		<option value="1">COM_MIGRATETOJOOMLA_FTP</option>
		<option value="2">COM_MIGRATETOJOOMLA_FTPS</option>
		<option value="3">COM_MIGRATETOJOOMLA_SFTP</option>
	</field>
	<field
		name="ftpbasedir"
		type="text"
		showon="mediaoptions:3"
		label="COM_MIGRATETOJOOMLA_FTP_BASE_DIR_LABEL"
		description="COM_MIGRATETOJOOMLA_FTP_BASE_DIR_DESC"/>
	<field
		name="dbhostname"
		type="text"
		label="COM_MIGRATETOJOOMLA_HOSTNAME_LABEL"/>
	<field
		name="dbdriver"
		type="text"
		default="mysqli"
		label="COM_MIGRATETOJOOMLA_DATABASE_DRIVER_LABEL"/>
	<field
		name="dbport"
		type="int"
		default='3306'
		label="COM_MIGRATETOJOOMLA_PORT_LABEL"/>
	<field
		name="dbname"
		type="text"
		label="COM_MIGRATETOJOOMLA_DATABASE_NAME_LABEL"/>
	<field
		name="dbusername"
		type="text"
		label="COM_MIGRATETOJOOMLA_USERNAME_LABEL"/>
	<field
		name="dbpassword"
		type="text"
		label="COM_MIGRATETOJOOMLA_PASSWORD_LABEL"/>
	<field
		name="dbtableprefix"
		type="text"
		label="COM_MIGRATETOJOOMLA_TABLE_PREFIX_LABEL"/>
